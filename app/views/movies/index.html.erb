<p id="notice"><%= notice %></p>

<div class="jumbotron">
  <h2>Annie and Oakley Movie reviews is great place to find reviews on movies from the 1940's till now.</h2>
  <h4>Explore the movies, review and and leave ratings for your fellow cinema junkies.</h4>
</div>

<table class = "table table-hover table condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Director</th>
      <th>Year</th>
      <th>Genre</th>
      
      <th colspan="2"></th>
    
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.year %></td>
        <td><%= movie.genre %></td>
        <td><%= link_to 'Show', movie, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

